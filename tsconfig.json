{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs",
    "moduleResolution": "node", // Explicitly set module resolution
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, 
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "docs", "tests", "examples"]
}

